mixin article(data)
  article(class=attributes.parentClass class='article')
    a(class='article__link-wrapper' href=`${data.link}` aria-label='detailed property information')
      div(class=`article__photo-wrapper article__photo-wrapper--${data.tag}`)
        picture
            source(type='image/webp' srcset=`img/${data.imageName}-desktop@1x.webp`)
            img(src=`img/${data.imageName}-desktop@1x.jpg` alt=`${data.imageName}`)
      div(class='article__container')
        h3(class='article__title') #{data.title}
        p(class='article__address') #{data.address}
        p(class='article__text')
          | #{data.text}
          |
          b(class='article__price') &#163;#{data.price}
        p(class='article__info') #{data.info}
