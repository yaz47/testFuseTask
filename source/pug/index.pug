doctype html
html(lang='en')

  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    meta(name='format-detection' content='telephone=no')
    link(rel='preload' href='fonts/muli-extralight.woff2' as='font' crossorigin='anonymous')
    link(rel='preload' href='fonts/muli-light.woff2' as='font' crossorigin='anonymous')
    link(rel='preload' href='fonts/muli-regular.woff2' as='font' crossorigin='anonymous')
    link(rel='preload' href='fonts/muli-semibold.woff2' as='font' crossorigin='anonymous')
    link(rel='preload' href='fonts/trirong-light.woff2' as='font' crossorigin='anonymous')
    link(rel='preload' href='fonts/trirong-regular.woff2' as='font' crossorigin='anonymous')
    link(href='css/style.min.css' rel='stylesheet')

    block title
      title Real estate

    block pixel-glass
      style.
        html {
          background-repeat: no-repeat;
          background-position: 50% 0;
          background-image: url('img/layout.jpg');
        }

  body

    block header
      include ../blocks/header/header.pug

    block content
      main
        include ../blocks/intro/intro.pug
        include ../blocks/about/about.pug
        include ../blocks/clients/clients.pug
        include ../blocks/portfolio/portfolio.pug
        include ../blocks/blog/blog.pug
        include ../blocks/contact/contact.pug

    block footer
      include ../blocks/footer/footer.pug

    include ../blocks/scroll/scroll.pug

    include ../blocks/gh/gh.pug

    script(src='js/script.min.js')
